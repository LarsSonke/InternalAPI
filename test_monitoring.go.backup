package main

import (
	"fmt"
	"io"
	"net/http"
	"time"
)

func main() {
	// Test health endpoint
	fmt.Println("Testing Internal API health endpoint...")
	
	client := &http.Client{Timeout: 5 * time.Second}
	
	resp, err := client.Get("http://localhost:8080/health")
	if err != nil {
		fmt.Printf("Error: %v\n", err)
		return
	}
	defer resp.Body.Close()
	
	body, err := io.ReadAll(resp.Body)
	if err != nil {
		fmt.Printf("Error reading response: %v\n", err)
		return
	}
	
	fmt.Printf("Status: %d\n", resp.StatusCode)
	fmt.Printf("Response: %s\n", string(body))
	
	// Test metrics endpoint
	fmt.Println("\nTesting metrics endpoint...")
	
	resp2, err := client.Get("http://localhost:8080/metrics")
	if err != nil {
		fmt.Printf("Error: %v\n", err)
		return
	}
	defer resp2.Body.Close()
	
	body2, err := io.ReadAll(resp2.Body)
	if err != nil {
		fmt.Printf("Error reading metrics response: %v\n", err)
		return
	}
	
	fmt.Printf("Metrics Status: %d\n", resp2.StatusCode)
	fmt.Printf("Metrics Preview (first 500 chars): %s...\n", string(body2[:500]))
}